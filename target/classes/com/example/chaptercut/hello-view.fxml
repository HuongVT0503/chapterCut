<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/22-ea+11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.chaptercut.HelloController">
  <padding>
    <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
  </padding>

  <!-- Section for .docx file processing -->
  <Label fx:id="statusLabel" text="Select a .docx file to process."/>
  <Button text="Choose File" onAction="#handleChooseFile"/>

  <!-- Additional section for a welcome message -->

  <Button text="Hello!" onAction="#onHelloButtonClick"/>
</VBox>
